<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="180dp"
    android:layout_height="260dp"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    app:cardCornerRadius="@dimen/card_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_movie_cast"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cast_content_description"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cast_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingLeft="@dimen/cast_title_padding"
            android:paddingRight="@dimen/cast_title_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/cast_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_movie_cast"
            tools:text="Shah Rukh Khan" />

        <TextView
            android:id="@+id/tv_cast_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingLeft="@dimen/cast_title_padding"
            android:paddingRight="@dimen/cast_title_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/cast_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast_title"
            tools:text="Shah Jafar" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>